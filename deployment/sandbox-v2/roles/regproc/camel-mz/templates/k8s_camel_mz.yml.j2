---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{regproc_camel_mz_name}}
  namespace: default
  labels:
    module: regproc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{regproc_camel_mz_name}}
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1 
  template:
    metadata:
      labels:
        app: {{regproc_camel_mz_name}}
        module: regproc
        component: service-hazelcast-server
    spec:
      containers:
      - name: {{regproc_camel_mz_name}}
        image: '{{regproc_camel_mz_image}}:{{regproc_camel_mz_version}}'
        env:
        - name: active_profile_env
          value: qa  # Different property file only for mz zone 
        - name: spring_config_label_env
          value: master
        - name: spring_config_url_env
          value: {{config_server_url}}  # Config server is on MZ cluster
        - name: zone_env
          value: secure 
        - name: artifactory_url_env
          value: '{{artifactory_uri}}'
        - name: is_glowroot_env
          value: absent
        ports:
          - name: eventbus-port
            containerPort: 5723
          - name: hazelcast-port
            containerPort: 5701
          - name: verticle-port
            containerPort: {{regproc_camel_mz_container_port}} 
        readinessProbe:
          tcpSocket:
            port: {{regproc_camel_mz_container_port}}  
---
apiVersion: v1
kind: Service
metadata:
  name: {{regproc_camel_mz_name}}
  namespace: default
spec:
  ports:
  - port: 80 
    targetPort: {{regproc_camel_mz_container_port}} 
  selector:
    app: {{regproc_camel_mz_name}}

---
# This service connects to all pods with following component name
# i.e. all stages
apiVersion: v1
kind: Service
metadata:
 namespace: default
 name: service-hazelcast-server
spec:
 selector:
   component: service-hazelcast-server
 clusterIP: None
 ports:
 - name: hz-port
   port: 5701
   protocol: TCP

