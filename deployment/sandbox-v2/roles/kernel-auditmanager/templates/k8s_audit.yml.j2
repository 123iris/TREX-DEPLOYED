---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{kernel_auditmanager_name}}
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{kernel_auditmanager_name}}
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1 
  template:
    metadata:
      labels:
        app: {{kernel_auditmanager_name}}
    spec:
      containers:
      - name: {{kernel_auditmanager_name}}
        image: '{kernel_auditmanager_image']}}:{{kernel_auditmanager_version}}'
        env:
        - name: active_profile_env
          value: qa
        - name: spring_config_label_env
          value: master
        - name: spring_config_url_env
          value: {{config_server_url}}
        - name: artifactory_url_env
          value: '{{artifactory_uri}}'
        - name: is_glowroot_env
          value: absent
        ports:
        - containerPort: 8081
        imagePullPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: {{kernel_auditmanager_name}}
  namespace: default
spec:
  ports:
  - port: 80 
    targetPort: 8081
  selector:
    app: {{kernel_auditmanager_name}}
  type: NodePort
