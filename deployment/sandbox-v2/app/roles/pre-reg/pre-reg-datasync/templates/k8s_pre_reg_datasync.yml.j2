---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{pre_reg_datasync_name}}
  namespace: default
  labels: 
    module: pre-reg
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{pre_reg_datasync_name}}
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1 
  template:
    metadata:
      labels:
        app: {{pre_reg_datasync_name}}
        module: pre-reg
    spec:
      containers:
      - name: {{pre_reg_datasync_name}}
        image: '{{pre_reg_datasync_image}}:{{pre_reg_datasync_version}}'
        env:
        - name: active_profile_env
          value: qa
        - name: spring_config_label_env
          value: master
        - name: spring_config_url_env
          value: {{config_server_url}}
        - name: artifactory_url_env
          value: '{{artifactory_uri}}'
        - name: is_glowroot_env
          value: absent
        ports:
        - containerPort: {{pre_reg_datasync_container_port}}
        imagePullPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: {{pre_reg_datasync_name}}
  namespace: default
spec:
  ports:
  - port: 80 
    targetPort: {{pre_reg_datasync_container_port}} 
  selector:
    app: {{pre_reg_datasync_name}}
  type: NodePort
