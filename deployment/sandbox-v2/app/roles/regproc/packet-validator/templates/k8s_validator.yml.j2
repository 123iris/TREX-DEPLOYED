---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{regproc_packet_validator_name}}
  namespace: default
  labels:
    module: regproc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{regproc_packet_validator_name}}
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1 
  template:
    metadata:
      labels:
        app: {{regproc_packet_validator_name}}
        module: regproc
        component: service-hazelcast-server
    spec:
      containers:
      - name: {{regproc_packet_validator_name}}
        image: '{{regproc_packet_validator_image}}:{{regproc_packet_validator_version}}'
        env:
        - name: active_profile_env
          value: qa 
        - name: spring_config_label_env
          value: master
        - name: spring_config_url_env
          value: {{config_server_external_url}}  # Config server is on MZ cluster
        - name: artifactory_url_env
          value: '{{artifactory_uri}}'
        - name: is_glowroot_env
          value: absent
        ports:
          - name: eventbus-port
            containerPort: 5715  # Different for each stage
          - name: hazelcast-port
            containerPort: 5701
          - name: verticle-port
            containerPort: {{regproc_packet_validator_container_port}}
        readinessProbe:
          tcpSocket:
            port: {{regproc_packet_validator_container_port}}  
---
apiVersion: v1
kind: Service
metadata:
  name: {{regproc_packet_validator_name}}
  namespace: default
spec:
  ports:
  - port: 80 
    targetPort: {{regproc_packet_validator_container_port}} 
  selector:
    app: {{regproc_packet_validator_name}}
